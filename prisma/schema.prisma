generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Committee {
  year             Int      @id @map("_id")
  firstDay         String //Should be in format "YYYY-MM-DDTHH:MM:SS"
  fontURL          String?
  orderInImageDesc String
  members          Member[]
}

model Member {
  name         String    @id @map("_id")
  role         String
  greeting     String?
  text         String?
  Committee    Committee @relation(fields: [year], references: [year])
  year         Int
  orderInImage Int // 1-indexed
}

model Links {
  version        Int      @id @map("_id")
  deklarationURL String
  phaddringURL   String
  calendarURLs   String[]
}

model PageText {
  page    String @id @map("_id")
  content String
}
