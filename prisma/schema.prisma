// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Committee {
  year     Int       @id @map("_id")
  firstday DateTime?
  fonturl  String?
  members  Member[]
}

model Member {
  name          String    @id @map("_id")
  role          String
  greeting      String?
  text          String?
  Committee     Committee @relation(fields: [year], references: [year])
  year          Int
}

model Calendar {
  url   String @id @map("_id")
  year  Int
  index Int
  name  String

  @@unique([year, index])
}
