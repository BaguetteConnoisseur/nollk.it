// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Committee {
  name     String    @id @map("_id")
  year     Int       @unique
  firstday DateTime?
  fonturl  String?
  members  Member[]
}

model Member {
  name          String     @id @map("_id")
  role          String
  greeting      String?
  text          String?
  Committee     Committee? @relation(fields: [committeeName], references: [name])
  committeeName String?
}

model Calendar {
  url   String @id @map("_id")
  year  Int
  index Int
  name  String

  @@unique([year, index])
}
