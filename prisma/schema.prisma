// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Committee {
  year     Int      @id @map("_id")
  firstday String? //Should be in format "YYYY-MM-DDTHH:MM:SS"
  fonturl  String?
  members  Member[]
}

model Member {
  name      String    @id @map("_id")
  role      String
  greeting  String?
  text      String?
  Committee Committee @relation(fields: [year], references: [year])
  year      Int
}

model Links {
  version        Int      @id @map("_id")
  deklarationURL String
  phaddringURL   String
  calendarURLs   String[]
}

model PageText {
  version          Int    @id @map("_id")
  nollkitText      String
  pateterText      String
  mottagningenText String
  modulText        String
}
