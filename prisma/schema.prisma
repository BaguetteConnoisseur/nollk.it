generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Committee {
  year             Int      @id @map("_id")
  firstDay         String //Should be in format "YYYY-MM-DDTHH:MM:SS"
  fontURL          String?
  orderInImageDesc String
  members          Member[]
}

model Member {
  name         String    @id @map("_id")
  role         String
  greeting     String?
  text         String?
  Committee    Committee @relation(fields: [year], references: [year])
  year         Int
  orderInImage Int
}

model Links {
  version        Int      @id @map("_id")
  deklarationURL String
  phaddringURL   String
  calendarURLs   String[]
}

model PageText {
  version          Int    @id @map("_id")
  nollkitText      String
  pateterText      String
  mottagningenText String
  modulText        String
}

model Link {
  id          String          @id @map("_id") @default(cuid())
  name          String
  url           String
  TimeLineEvent TimeLineEvent[]
}

model Category {    
  title         String        @id @map("_id")
  color         String
  TimeLineEvent TimeLineEvent[]
}

model TimeLineEvent {
  id         String      @id @map("_id") @default(cuid())
  year       String
  text       String
  date       String //Should be in format "YYYY-MM-DD"
  category   Category @relation(fields: [categoryId], references: [title])
  link       Link?     @relation(fields: [linkId], references: [id])
  linkId     String?
  categoryId String
}

model Faq {
  id          String @id @map("_id") @default(cuid())
  question    String
  answer      String
  orderInList Int
}