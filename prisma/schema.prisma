generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Committee {
  year             Int      @id @map("_id")
  firstDay         String //Should be in format "YYYY-MM-DDTHH:MM:SS"
  fontURL          String?
  orderInImageDesc String
  members          Member[]
}

model Member {
  name         String    @id @map("_id")
  role         String
  greeting     String?
  text         String?
  Committee    Committee @relation(fields: [year], references: [year])
  year         Int
  orderInImage Int
}

model Links {
  version        Int      @id @map("_id")
  deklarationURL String
  phaddringURL   String
  calendarURLs   String[]
}

model PageText {
  version          Int    @id @map("_id")
  nollkitText      String
  pateterText      String
  mottagningenText String
  modulText        String
}
