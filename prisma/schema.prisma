generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Committee {
  year             Int      @id @map("_id")
  firstDay         String //Should be in format "YYYY-MM-DDTHH:MM:SS"
  fontURL          String?
  orderInImageDesc String
  members          Member[]
}

model Member {
  name         String    @id @map("_id")
  role         String
  greeting     String?
  text         String?
  Committee    Committee @relation(fields: [year], references: [year])
  year         Int
  orderInImage Int // 1-indexed
}

model Links {
  id  String @id @map("_id")
  url String
}

model PageText {
  page    String @id @map("_id")
  content String
}

model Link {
  id            String          @id @default(cuid()) @map("_id")
  name          String
  url           String
  TimeLineEvent TimeLineEvent[]
}

model Category {
  title         String          @id @map("_id")
  color         String
  TimeLineEvent TimeLineEvent[]
}

model TimeLineEvent {
  id         String   @id @default(cuid()) @map("_id")
  year       String
  text       String
  date       String //Should be in format "YYYY-MM-DD"
  category   Category @relation(fields: [categoryId], references: [title])
  link       Link?    @relation(fields: [linkId], references: [id])
  linkId     String?
  categoryId String
}

model Faq {
  id          String @id @default(cuid()) @map("_id")
  question    String
  answer      String
  orderInList Int
}
